{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/config/index.js"]
}
